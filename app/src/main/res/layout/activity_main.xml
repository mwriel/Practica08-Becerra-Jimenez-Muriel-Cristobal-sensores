<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Envolvemos el LinearLayout dentro de un ScrollView -->
    <ScrollView
        android:layout_width="325dp"
        android:layout_height="674dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnListado"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Listado de sensores" />

            <Button
                android:id="@+id/btnMagnetico"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Sensor magnÃ©tico" />

            <Button
                android:id="@+id/btnProximidad"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Sensor de proximidad" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensores del dispositivo"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
